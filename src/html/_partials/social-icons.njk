{% set socialLinks = [
   {
      url: social.facebook,
      title: "Dark Castle Fest @ Facebook",
      icon: "facebook-square.svg"
   },
   {
      url: social.instagram,
      title: "Dark Castle Fest @ Instagram",
      icon: "instagram.svg"
   },
   {
      url: spotifyPlaylist,
      title: "Dark Castle Fest Spotify Playlist",
      icon: "spotify.svg"
   }
] %}

<ul class="social-nav">
   {% for item in socialLinks %}
      <li class="social-nav_item">
         <a href="{{ item.url }}" 
            target="_blank" 
            class="social-nav_link" 
            title="{{ item.title }}" 
            aria-label="{{ item.title }}"
         >
            <img inline src="/images/icons/{{ item.icon }}" class="icon" aria-hidden="true" />
         </a>
      </li>
   {% endfor %}
</ul>
